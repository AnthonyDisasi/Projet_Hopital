{% extends 'base.html.twig' %}

{% block navbar %}
<ul class="brand-logo left">
    <li class="white-text">
        Connexion
    </li>
</ul>
{% endblock %}
{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <form action="{{ path('app_login_check') }}" method="post">
                    <label for="username">Nom d'utilisateur :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Nom d\'utilisateur" />

                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="_password" placeholder="Mot de passe">

                    <button class="btn red waves-effect" type="submit">Connexion</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}